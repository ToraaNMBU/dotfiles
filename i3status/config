order += "volume master"
order += "battery 1"
order += "tztime local"
order += "wireless wlp63s0"
order += "disk /"

battery 1 {
        format = "%status %percentage"
        format_percentage = "%.00f%s"
        status_chr = "âš¡ CHR"
        status_bat = "ðŸ”‹ BAT"
        low_threshold = 13
        threshold_type = percentage
}


tztime local {
        format = "%Y-%d-%m %H:%M:%S"
}


